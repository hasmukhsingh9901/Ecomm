{{> header }}

{{#if error.length}}
<div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
  <span class="inline-block mt-1 mb-1 text-white">{{error}}</span>
</div>
{{/if}}

<div class="w-full h-screen flex px-">
  <div class="w-1/2 flex items-center justify-center h-screen">
    <div class="w-full px-32 ">
      <h3 class="text-4xl capitalize">
        welcome to <span class=" font-semibold relative text-cyan-700">  Carry ALL</span>
      </h3>
      <h4 class="text-2xl mb-5">create your account</h4>
      <form action="/users/register" method="post">
        {{> _input type="text" placeholder="Full Name" name="fullname" }}
        {{> _input type="email" placeholder="Email" name="email" }}
        {{> _input type="password" placeholder="Password" name="password" }}
        <input
          class="px-5 rounded-full py-3 mt-2 bg-cyan-700 text-white"
          type="submit"
          value="Create My Account"
        />
      </form>
    </div>
  </div>

  <div class="w-1/2 flex items-center justify-center h-screen">
    <div class="w-full px-32">
      <h4 class="text-2xl capitalize mb-5">login your account</h4>
      <form action="/users/login" method="post">
        {{> _input type="email" placeholder="Email" name="email" }}
        {{> _input type="password" placeholder="Password" name="password" }}
        <input
          class="px-5 block rounded-full py-3 mt-2 bg-cyan-700 text-white"
          type="submit"
          value="Login"
        />
      </form>
    </div>
  </div>
</div>

{{> footer }}
